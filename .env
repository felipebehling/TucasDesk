# =========================
# BANCO DE DADOS
# =========================
DB_VENDOR=mariadb
DB_HOST=db
DB_PORT=3306
DB_NAME=tucasdesk
DB_USER=tucasdesk
DB_PASSWORD=tucasdesk123
DB_ROOT_PASSWORD=root
DATABASE_URL=mariadb://tucasdesk:tucasdesk123@db:3306/tucasdesk
SPRING_DATASOURCE_URL=jdbc:mariadb://db:3306/tucasdesk?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8
SPRING_DATASOURCE_USERNAME=tucasdesk
SPRING_DATASOURCE_PASSWORD=tucasdesk123
SPRING_PROFILES_ACTIVE=mariadb

# =========================
# CORS / FRONTEND
# =========================
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Corrigido para localhost para funcionar no seu navegador
# Se você alterar esta variável, lembre-se de reconstruir os contêineres do Docker com 'docker-compose build'
VITE_API_URL=http://localhost:8081

# =========================
# AWS – GERAL
# =========================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# =========================
# AWS COGNITO
# =========================
AWS_COGNITO_REGION=us-east-1
AWS_COGNITO_USER_POOL_ID=us-east-1_local
AWS_COGNITO_APP_CLIENT_ID=local-client
AWS_COGNITO_ISSUER_URI=http://localhost:4566/us-east-1_local
AWS_COGNITO_JWK_SET_URI=http://localhost:4566/us-east-1_local/.well-known/jwks.json

# =========================
# AWS SQS / SNS – MESSAGING
# =========================
AWS_SQS_QUEUE_NAME=tucasdesk-local-queue
AWS_SNS_TICKET_CREATED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:tucasdesk-local-ticket-created
AWS_SNS_TICKET_CLOSED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:tucasdesk-local-ticket-closed
AWS_SNS_TICKET_INTERACTED_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:tucasdesk-local-ticket-interacted

# =========================
# AWS SES – EMAIL
# =========================
AWS_SES_ENABLED=true
AWS_SES_REGION=us-east-1
AWS_SES_FROM_ADDRESS=noreply@tucasdesk.local
AWS_SES_REPLY_TO_ADDRESS=
AWS_SES_TO_ADDRESSES=user@example.com
AWS_SES_TEMPLATE_NAME=tucasdesk-ticket-update
AWS_SES_CONFIGURATION_SET=
AWS_SES_CHARSET=UTF-8
