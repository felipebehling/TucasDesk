# =========================
# BANCO DE DADOS
# =========================
DB_VENDOR=mariadb
DB_HOST=db
DB_PORT=3306
DB_NAME=tucasdesk
DB_USER=tucasdesk
DB_PASSWORD=tucasdesk123
# root só usado pelo container do banco
DB_ROOT_PASSWORD=root

# URL de banco padrão (usada por alguns libs se precisarem)
DATABASE_URL=mariadb://tucasdesk:tucasdesk123@db:3306/tucasdesk

# Spring DataSource (backend dentro do Docker fala com "db:3306")
SPRING_DATASOURCE_URL=jdbc:mariadb://db:3306/tucasdesk?useSSL=false&allowPublicKeyRetrieval=true&useUnicode=true&characterEncoding=utf8
SPRING_DATASOURCE_USERNAME=tucasdesk
SPRING_DATASOURCE_PASSWORD=tucasdesk123
SPRING_PROFILES_ACTIVE=mariadb

# =========================
# CORS / FRONTEND
# =========================
# backend aceitando essas origens
APP_CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# frontend chamando backend via rede Docker
VITE_API_URL=http://tucasdesk-backend:8080

# =========================
# AWS – GERAL
# =========================
AWS_REGION=sa-east-1

# CREDENCIAIS AWS (preencher com um usuário IAM que tenha acesso a SQS/SNS/SES)
AWS_ACCESS_KEY_ID=SEU_ACCESS_KEY_ID_AQUI
AWS_SECRET_ACCESS_KEY=SUA_SECRET_ACCESS_KEY_AQUI

# =========================
# AWS COGNITO
# =========================
AWS_COGNITO_REGION=sa-east-1
AWS_COGNITO_USER_POOL_ID=sa-east-1_MDSBUiaFF
AWS_COGNITO_APP_CLIENT_ID=26lt7nvqgs3ikqcfh3t078ehj326lt7nvqgs3ikqcfh3t078ehj3
AWS_COGNITO_ISSUER_URI=https://cognito-idp.sa-east-1.amazonaws.com/sa-east-1_MDSBUiaFF
AWS_COGNITO_JWK_SET_URI=https://cognito-idp.sa-east-1.amazonaws.com/sa-east-1_MDSBUiaFF/.well-known/jwks.json

# =========================
# AWS SQS / SNS – MESSAGING
# =========================
# Nome da fila SQS (EXATAMENTE como está criada no console da AWS)
AWS_SQS_QUEUE_NAME=tucasdesk-chamado-events   # <<< ajuste para o nome real

# Tópico "genérico" (se estiver usando)
AWS_SNS_TOPIC_ARN=arn:aws:sns:sa-east-1:SEU_ACCOUNT_ID:tucasdesk-global-topic

# Tópico de ticket criado
AWS_SNS_TICKET_CREATED_TOPIC_ARN=arn:aws:sns:sa-east-1:SEU_ACCOUNT_ID:tucasdesk-ticket-created

# Tópico de ticket fechado
AWS_SNS_TICKET_CLOSED_TOPIC_ARN=arn:aws:sns:sa-east-1:SEU_ACCOUNT_ID:tucasdesk-ticket-closed

# =========================
# AWS SES – EMAIL
# =========================
AWS_SES_ENABLED=true
AWS_SES_REGION=sa-east-1
AWS_SES_FROM_ADDRESS=seu-email-verificado-no-ses@exemplo.com
AWS_SES_REPLY_TO_ADDRESS=
AWS_SES_TO_ADDRESSES=destino1@exemplo.com,destino2@exemplo.com
AWS_SES_TEMPLATE_NAME=tucasdesk-ticket-update
AWS_SES_CONFIGURATION_SET=
AWS_SES_CHARSET=UTF-8
